{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "./dist/server",
    "rootDir": "./src/app/server",
    "baseUrl": "./src/app/server",
    "paths": {
      "@/*": ["*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/app/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app/main",
    "src/app/renderer"
  ]
}