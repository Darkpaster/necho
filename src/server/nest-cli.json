{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/",
  "entryFile": "./main",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "webpack": false,
    "builder": "tsc",
    "assets": ["**/*.graphql", "**/*.proto", "**/*.json"],
    "watchAssets": true,
    "plugins": ["@nestjs/swagger/plugin"]
  }
}