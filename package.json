{
  "name": "necho",
  "version": "1.0.0",
  "description": "Messenger",
  "author": "Human",
  "type": "module",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run build:frontend && npm run build:main && npm run build:backend",
    "build:frontend": "webpack --config webpack/webpack.renderer.config.ts",
    "build:main": "webpack --config webpack/webpack.main.config.ts",
    "build:backend": "cd src/server && npm run build",
    "dev": "concurrently -k -n FRONTEND,MAIN,BACKEND -c cyan,magenta,yellow \"npm run dev:frontend\" \"npm run dev:main\" \"npm run dev:backend\"",
    "dev:frontend": "webpack serve --config webpack/webpack.renderer.config.ts",
    "dev:main": "wait-on http://localhost:3000 && npm run build:main && electron --disable-dbus --enable-experimental-vm-modules dist/main/main.js",
    "dev:backend": "cd src/server && npm run start:dev"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "lucide-react": "^0.525.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^37.2.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "style-loader": "^4.0.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.20.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
